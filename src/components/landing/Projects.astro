---
import projects from "../../config/projects.json";
---

<h2 class="font-bold text-5xl my-5 text-center">Projects</h2>

{
  projects.map((project) => (
    <div class="flex text-center justify-between items-center my-5 flex-col md:flex-row gap-y-5 p-4">
      <div class="flex-1">
        <h2 class="font-bold text-2xl my-4">{project.title}</h2>
        <p>{project.description}</p>
        <button class="bg-indigo-500 rounded px-3 py-2 my-3 hover:bg-indigo-400">More info</button>
      </div>
      <div class="flex-1">
        <img src={project.img} class="w-72 m-auto" alt="" />
      </div>
    </div>
  ))
}
